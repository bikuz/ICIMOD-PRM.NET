                                            <th>Implementation Date</th>
                                            <th>Currency</th>
                                            <th>Rates</th>
                                            <th>Action</th>
                                            
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Implementation Date</th>
                                            <th>Currency</th>
                                            <th>Rates</th>
                                            <th>Action</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        
                                        
                                        
                                    </tbody>
                                </table>
                                </div>

                       
                        <!--Card-content Ends-->
                    </div>


                    <!--Card Ends-->
                </div>
            </div>

        </div>
    </div>
</div>

