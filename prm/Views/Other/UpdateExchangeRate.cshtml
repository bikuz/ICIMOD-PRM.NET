                    </div>
                   
                    <div class="card-content">
                       <div class="row">
                       		<div class="col-md-4">
                       			<p class="text-center">Implementation Date</p>
                       			<input type="text" class="form-control" placeholder="Date">
                       		</div>
                       		<div class="col-md-4">
                       			<p class="text-center">Currency</p>
                       			<select class="selectpicker form-control" id="sel5">
						        <option>NPR</option>
						        <option>INR</option>
						        <option>EUR</option>
						        <option>NOK</option>
						      </select>
                       		</div>
                       		<div class="col-md-4">
                       			<p class="text-center">Exchange Rate (USD = 1)</p>
                       			<input type="text" class="form-control" placeholder="Rate">
                       		</div>
                       		<div class="col-md-12">

                       		<br>
                       		<p class="text-center">
                       		<button type="button" class="btn btn-primary">Submit</button>
                       		</p>
                       		</div>
                       </div>

                       
                        <!--Card-content Ends-->
                    </div>


                    <!--Card Ends-->
                </div>


                <!--Column ends-->
            </div>

            <div class="col-md-12">
            <div class="card">
                    <div class="card-header">
                        <!--Card Title-->
                        <span class="card-title">Exchange Rates</span>
                        <!-- <span class="cardButton"><a href="#" class="cardCollapseLink" id="card-3"><i class="fa fa-chevron-circle-down fa-lg fa-bold" style="color:#ffffff;" aria-hidden="true"></i></a></span> -->
                        <!--Card-Header Ends-->
                    </div>
                   
                    <div class="card-content">
                       
                    		 <div class="table-responsive">
                                 <table id="example" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
