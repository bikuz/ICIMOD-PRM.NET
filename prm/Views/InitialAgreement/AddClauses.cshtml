@{
    ViewBag.Title = "AddClauses";
}
 
<div class="row">

    <div class="container-fluid">
        <!--Data Card Container Row-->
        <div class="row" style="margin:10px;">

            <div class="col-md-12">
                <div class="card" id="card-clauses-main">
                    <div class="card-header">
                        <!--Card Title-->
                        <span class="card-title">Add New Clauses</span>
                        <span class="cardButton"><a href="#" class="cardCollapseLink" id="card-clauses"><i class="fa fa-chevron-circle-down fa-lg fa-bold" style="color:#ffffff;" aria-hidden="true"></i></a></span>
                        <!--Card-Header Ends-->
                    </div>
                    
                    <div class="card-content">
                        <label class="control-label col-md-12" style="text-align:center;display:block;margin-bottom:10px;">Codes for Names</label>

                        <div class="col-md-12">
                            <div class="mce-holder" style="height:auto;">
                                <div class="row">
                                    <div class="col-md-4">
                                        <span class="list-code-name">Agreement Number</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{AgreementNumber}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Partner Name</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{PartnerName}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Project Title</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{ProjectTitle}</span>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-4">
                                        <span class="list-code-name">RP/Initiatives</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{RPInitiatives}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Country</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{Country}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Start Date</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{StartDate}</span>
                                    </div>
                                </div>
                               
                                <div class="row">
                                    <div class="col-md-4">
                                        <span class="list-code-name">End Date</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{EndDate}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Project Period</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{ProjectPeriod}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Project Objective</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{ProjectObjective}</span>
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-md-4">
                                        <span class="list-code-name">Amount</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{Amount}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Amount In Words</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{AmountInWords}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Amount In USD</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{AmountInUSD}</span>
                                    </div>
                                </div>
                                
                              
                                <div class="row">
                                    <div class="col-md-4">
                                        <span class="list-code-name">Deliverables</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{Deliverables}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Addendum Section</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{AddendumSection}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Loa Ref No</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{LoaRefNo}</span>
                                    </div>
                                </div>
                                 
                                <div class="row">
                                    <div class="col-md-4">
                                        <span class="list-code-name">Addendum Purpose</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{A.Purpose}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Clauses</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{clauses}</span>
                                    </div>

                                    <div class="col-md-4">
                                        <span class="list-code-name">Focal Persons</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{FocalPersons}</span>
                                    </div>
                                </div>
                                 
                                <div class="row">
                                    <div class="col-md-4">
                                        <span class="list-code-name">Signatories</span>
                                        <span class="list-code-name">:</span>
                                        <span class="list-code-code">{Signatories}</span>
                                    </div>

                                    <div class="col-md-4">

                                    </div>

                                    <div class="col-md-4">

                                    </div>
                                </div> 

                                
                            </div>
                        </div>

                        <div class="col-md-12"><div class="horizontal-line"></div></div>
                        <form role="form" style="margin-top:20px;">
                            <div class="row">
                                <div class="col-md-5"></div>
                                <div class="col-md-3" style="text-align:center">
                                    <div class="form-group">
                                        <label class="control-label">Agreement Type</label>

                                        <select id="PartneringInstrumentId" class="form-control">
                                            <option value="10">Addendum for LoA</option>
                                            <option value="9">Addendum of Institutional Contract</option>
                                            <option value="4">Institutional Contract Type A</option>
                                            <option value="5">Institutional Contract Type B</option>
                                            <option value="6">Institutional Contract Type C</option>
                                            <option value="1">LoA Type A</option>
                                            <option value="2">LoA Type B</option>
                                            <option value="3">LoA Type C</option>
                                            <option value="8">LoI (Letter of Intent)</option>
                                            <option value="7">MoU</option>
                                        </select>

                                    </div>
                                </div>
                                <div class="col-md-6"></div>

                                <div class="col-md-12">
                                    <div class="mce-holder"></div>
                                </div>

                            </div>

                           

                            <div class="row">
                                <div class="col-md-12"><div class="horizontal-line"></div></div>

                                <div style="float:right;margin-right:30px;">
                                    <button type="submit" class="btn btn-primary">Save and Continue</button>
                                    <button type="submit" class="btn btn-primary">Cancel</button>
                                </div>
                            </div>
                        </form>

                        <!--Card-content Ends-->
                    </div>


                    <!--Card Ends-->
                </div>
                <!--Column ends-->
            </div>

        </div>
    </div>
</div>
