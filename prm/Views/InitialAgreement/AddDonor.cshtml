@{
    ViewBag.Title = "Add Donor";
}

 <div class="row">

    <div class="container-fluid">
        <!--Data Card Container Row-->
        <div class="row" style="margin:10px;">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <!--Card Title-->
                        <span class="card-title">Add Information of Donor</span>
                        <span class="cardButton"><a href="#" class="cardCollapseLink" id="card-3"><i class="fa fa-chevron-circle-down fa-lg fa-bold" style="color:#ffffff;" aria-hidden="true"></i></a></span>
                        <!--Card-Header Ends-->
                    </div>
                    <h3 style="text-align:center">Donor Information</h3>
                    <div class="card-content">
                        <form class="form-horizontal" role="form" style="margin-top:20px;">
                            <div class="row">
                                <div class="col-md-3"></div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label col-md-3">Donor Name</label>
                                        <div class="col-md-9">
                                            <input type="text" class="form-control" id="DonorName" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3"></div>

                                <div class="col-md-12"><div class="horizontal-line"></div></div>

                                <div style="float:right;margin-right:30px;">
                                    <button type="submit" class="btn btn-primary">Save and Continue</button>
                                    <button type="submit" class="btn btn-primary">Cancel</button>
                                </div>

                            </div>
                        </form>

                        <!--Card-content Ends-->
                    </div>


                    <!--Card Ends-->
                </div>
                <!--Column ends-->
            </div>

        </div>
    </div>
</div>
