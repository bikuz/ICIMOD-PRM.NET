    <script>
        $(document).ready(function () {


            var scroll_start = 0;
            var startchange = $("#main_content");
            var offset = startchange.offset();

            if (startchange.length) {
                $(document).scroll(function () {
                    scroll_start = $(this).scrollTop();
                    if (scroll_start > (offset.top - 65)) {
                        $(".main-header").css('background-color', '#061456');
                        $('.header-btn').css('color', 'white');
                        $('#head-prm').show();
                        $("#header").addClass('shadow');
                    } else {
                        $('.main-header').css('background-color', 'transparent');
                        $('.header-btn').css('color', 'white');
                        $('#head-prm').hide();
                        $("#header").removeClass('shadow');
                    }
                });
            }


            resize_Elements();

            function resize_Elements() {
                resize_downloadcard_menu();

            }

            function resize_downloadcard_menu() {
                //resize download menu and submenu
                var oldWidth = $('#card-downloads .menu-card').width();
                var newWidth = $('#card-downloads').width() - 30;
                var delWidth = newWidth - oldWidth;
                $('#card-downloads .menu-card').width(newWidth);
                $('.download-menu-holder').width(newWidth * 3);
                //fix download menu and submenu translate value while resize
                var elem_transform = $('.download-menu-holder').css('-transform');
                if (elem_transform != 'none' & elem_transform != undefined) {
                    var currTrans = $('.download-menu-holder').css('transform').split(/[()]/)[1];
                    var posx = currTrans.split(',')[4];
                    if (posx < 0) {
                        $('.download-menu-holder').addClass('notransition');
                        $('.download-menu-holder').css('transform', 'translate(' + (posx - delWidth) + 'px,0px)');
                        $('.download-menu-holder').removeClass('notransition');
                    }
                    else {
                        $('.download-submenu').hide();
                    }
                }


            }

            //handling side menu-names when the screen is resized
            $(window).resize(function () {
                resize_Elements();
                if ((Modernizr.mq('(max-width: 1001px)'))) {
                    $('.menu-names').css('display', 'inherit');

                } else {
                    $("#wrapper").removeClass('toggled');
                }

            });

            //Handling menu toggle click
            $("#menu-toggle").click(function (e) {
                e.preventDefault();

                //switching the  display to none when the screen size is of a desktop
                if ((Modernizr.mq('(min-width: 1001px)'))) {

                    $('.menu-names').css('display', 'none');
                }

                $('.collapse').collapse('hide');
                $("#wrapper").toggleClass("toggled");

                resize_Elements();
                $('.nav-side-menu').one('webkitTransitionEnd otransitionend oTransitionEnd msTransitionEnd transitionend',
                function (e) {
                    resize_Elements();
                    //after the animation ends switching display for menu-names based on it's state
                    if ((Modernizr.mq('(min-width: 1001px)'))) {
                        if ($('.nav-side-menu').width() == 250) {
                            $('.menu-names').css('display', 'inherit');
                        } else {
                            $('.menu-names').css('display', 'none');
                        }
                    }


                });

            });

            //Handling when user tries to open the menu item when the side bar is collapsed
            $(".collapsed").click(function (e) {
                console.log($('.nav-side-menu').width());
                if ($('.nav-side-menu').width() == 100) {
                    $('.menu-names').css('display', 'none');
                    $("#wrapper").toggleClass("toggled");
                    $('.nav-side-menu').one('webkitTransitionEnd otransitionend oTransitionEnd msTransitionEnd transitionend',
                       function (e) {

                           $('.menu-names').css('display', 'inherit');

                       });
                };
            });

            
        })


    </script>

